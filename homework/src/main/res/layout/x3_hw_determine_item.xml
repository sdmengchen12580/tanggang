<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kuozhi.x3.homework.view.test.DetermineHomeworkQuestionWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="28dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="28dp">

        <include layout="@layout/homework_material_stem_include" />

        <TextView
            android:id="@+id/homework_question_stem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homework_question_stem"
            android:textColor="@color/homework_stem" />

        <RadioGroup
            android:id="@+id/hw_question_result_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@drawable/hw_choice_right_sel"
                android:gravity="center" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@drawable/hw_choice_error_sel"
                android:gravity="center" />
        </RadioGroup>
    </LinearLayout>

    <ViewStub
        android:id="@+id/hw_quetion_analysis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout="@layout/homework_question_analysis" />
</com.edusoho.kuozhi.x3.homework.view.test.DetermineHomeworkQuestionWidget>
