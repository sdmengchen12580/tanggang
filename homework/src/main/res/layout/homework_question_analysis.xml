<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hw_question_analysis_bg"
    android:padding="8dp">

    <ImageView
        android:id="@+id/hw_question_answer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/hw_question_answer_bg_partright"
        android:padding="16dp"
        android:src="@drawable/hw_question_answer_partright" />

    <TextView
        android:id="@+id/hw_question_right_anwer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/hw_question_answer_icon"
        android:padding="9dp"
        android:text="正确答案:"
        android:textSize="@dimen/base_size" />

    <TextView
        android:id="@+id/hw_question_my_anwer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hw_question_right_anwer"
        android:layout_toRightOf="@id/hw_question_answer_icon"
        android:padding="9dp"
        android:text="你的答案:"
        android:textSize="@dimen/base_size" />

    <TextView
        android:id="@+id/hw_question_analysis_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hw_question_my_anwer"
        android:padding="9dp"
        android:text="@string/homework_analysis"
        android:textSize="@dimen/font_m" />

    <TextView
        android:id="@+id/hw_question_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hw_question_analysis_title"
        android:padding="9dp"
        android:textSize="@dimen/font_m" />
</RelativeLayout>