<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.edusoho.kuozhi.v3.view.EduSohoButton
        android:id="@+id/homework_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        app:defaultColor="@color/lesson_learn_btn_normal"
        app:focusColor="@color/lesson_learn_btn_pressed"
        app:radius="4dp"
        app:textColor="@color/white"
        app:textSize="@dimen/medium_font_size"
        app:textStr="提交" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/homework_submit_btn"
        android:background="@color/material_grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/homework_answer_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

</RelativeLayout>