<resources>

    <style name="HomeworkCardDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/AnimRight</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fragment_right_to_left</item>
        <item name="android:windowExitAnimation">@anim/fragment_left_to_right</item>
    </style>

</resources>
