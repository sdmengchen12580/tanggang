<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="2dp"/>
            <size android:height="30dp" android:width="80dp" />
            <stroke android:width="1px" android:color="@color/font_2" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:centerColor="@color/background"
                android:endColor="@color/background"
                android:startColor="@color/background" />
        </shape>
    </item>

    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="20dp"
        android:right="20dp"
        >

        <bitmap android:gravity="center" android:src="@drawable/hw_question_choice_error">

        </bitmap>
    </item>

</layer-list>