<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape>
        <!-- shape的颜色，支持渐变 -->
        <gradient
            android:endColor="@color/grounding"
            android:startColor="@color/grounding" />
    </shape>
</item>

<item
    android:top="0dp"
    android:bottom="1dp"
    android:left="3dp"
    android:right="3dp">
    <shape>
        <!-- 是否是圆角 -->
        <corners android:radius="0dip" />

        <stroke
            android:width="1px"
            android:color="@color/material_grey"

            />
        <!-- shape的颜色，支持渐变 -->
        <gradient
            android:endColor="@color/base_black_low"
            android:startColor="@color/base_black_low" />

    </shape>
</item>

</layer-list>