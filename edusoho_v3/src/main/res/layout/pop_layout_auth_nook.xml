<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tran"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bg"
        android:layout_width="match_parent"
        android:background="@color/trans_color"
        android:layout_height="0dp"
        android:layout_weight="0.35"/>

    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_4_ffffff_corner"
        android:orientation="vertical">

        <ImageView
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_auth_nook" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="26.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.5dp"
            android:gravity="center"
            android:text="认证失败！"
            android:textColor="@color/color_161616"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.5dp"
            android:gravity="center_horizontal"
            android:text="系统匹配失败！考试仅本人可参加。"
            android:textColor="@color/color_161616"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_re_auth"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21.5dp"
            android:layout_marginTop="35.5dp"
            android:layout_marginRight="21.5dp"
            android:background="@drawable/shape_4_conrner_solid_0292fd"
            android:gravity="center"
            android:text="@string/str_re_auth"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_bg1"
        android:layout_width="match_parent"
        android:background="@color/trans_color"
        android:layout_height="0dp"
        android:layout_weight="0.65"/>

</LinearLayout>
