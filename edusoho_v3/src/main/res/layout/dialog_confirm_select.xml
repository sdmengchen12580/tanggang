<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_white_background"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_cancel"
                android:text="@string/cancel"
                android:textSize="@dimen/font_l"
                android:padding="@dimen/common_15"
                android:textColor="@color/primary_font_color"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/common_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/disabled_hint_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/rl_up"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_15"
                android:paddingRight="@dimen/common_15">

                <TextView
                    android:id="@+id/tv_discount_price"
                    android:textSize="@dimen/font_xl"
                    android:textColor="@color/secondary_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10"
                    android:textColor="@color/secondary2_font_color"
                    android:textSize="@dimen/font_l" />

                <TextView
                    android:id="@+id/discount"
                    android:text="@string/discount"
                    android:textSize="@dimen/font_xxs"
                    android:visibility="gone"
                    android:textColor="@color/disabled2_hint_color"
                    android:gravity="center"
                    android:background="@color/secondary_color"
                    android:layout_marginLeft="@dimen/common_20"
                    android:layout_width="22dp"
                    android:layout_height="@dimen/common_16" />

            </LinearLayout>

            <View
                android:background="@color/disabled_hint_color"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:text="@string/teach_plan"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_l"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.edusoho.kuozhi.clean.widget.ESFlowRadioGroup
                android:id="@+id/rg_type"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/disabled_hint_color"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:text="@string/summary"
                android:textSize="@dimen/font_l"
                android:textColor="@color/primary_font_color"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginTop="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_service"
                android:textSize="@dimen/font_s"
                android:textColor="@color/secondary_font_color"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_way"
                android:textSize="@dimen/font_s"
                android:textColor="@color/secondary_font_color"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_validity"
                android:textSize="@dimen/font_s"
                android:textColor="@color/secondary_font_color"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_task"
                android:textSize="@dimen/font_s"
                android:textColor="@color/secondary_font_color"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_vip"
                android:textSize="@dimen/font_s"
                android:textColor="@color/primary"
                android:layout_marginTop="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="18dp"
                android:background="@color/disabled_hint_color"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>