<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_player_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/video_player_controller_play_btn" />

    <TextView
        android:id="@+id/tv_player_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="00:00/00:00"
        android:textColor="@color/secondary2_font_color"
        android:textSize="@dimen/font_xxs"
        tools:text="00:00/00:00" />

    <SeekBar
        android:id="@+id/sb_player"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:paddingBottom="6dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="6dp"
        android:progressDrawable="@drawable/player_seekbar_progress"
        android:thumb="@drawable/controller_play_seek_thumb"
        android:thumbOffset="10dp" />

    <TextView
        android:id="@+id/tv_player_resource_type"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/player_btn_bg"
        android:gravity="center"
        android:text="高清"
        android:textColor="@color/secondary2_font_color"
        android:textSize="@dimen/font_xxs"
        tools:text="高清" />

    <TextView
        android:id="@+id/tv_controller_rate"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/player_btn_bg"
        android:gravity="center"
        android:text="1x"
        android:textColor="@color/secondary2_font_color"
        android:textSize="@dimen/font_xxs"
        tools:text="1x" />

    <CheckBox
        android:id="@+id/cb_controller_screen"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/font_xxs"
        android:layout_weight="0"
        android:background="@drawable/ic_fullscreen_black"
        android:button="@null" />

</LinearLayout>