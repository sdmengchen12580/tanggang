<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_bg_f5f5f5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/primary_color">

        <com.edusoho.kuozhi.v3.view.EdusohoAutoCompleteTextView
            android:id="@+id/school_url_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/net_school_cancel_search_btn"
            android:background="@drawable/search_netschool_bg"
            android:drawableLeft="@drawable/icon_search_light"
            android:drawablePadding="10dp"
            android:hint="@string/txt_search"
            android:imeOptions="actionSearch"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:singleLine="true"
            android:textColor="@color/primary_font_color"
            android:textColorHint="@color/disabled_hint_color"
            android:textSize="@dimen/font_l" />

        <ImageView
            android:id="@+id/url_cancel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/school_url_edit"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:src="@drawable/icon_cancel" />

        <TextView
            android:id="@+id/net_school_cancel_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="10dp"
            android:paddingRight="14dp"
            android:text="取消"
            android:textColor="@color/disabled2_hint_color"
            android:textSize="@dimen/font_l" />
    </RelativeLayout>


