<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/material_dlg_bg">

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/material_title"
        android:textSize="@dimen/material_title" />

    <TextView
        android:id="@+id/popup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="8"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="@color/material_content"
        android:textSize="@dimen/material_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_message"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/popup_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:tag="left"
            android:text="取 消"
            android:textColor="@color/material_cancel_btn"
            android:textSize="@dimen/material_btn" />

        <TextView
            android:id="@+id/popup_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:tag="right"
            android:text="确 定"
            android:textColor="@color/material_ok_btn"
            android:textSize="@dimen/material_btn" />
    </LinearLayout>
</RelativeLayout>