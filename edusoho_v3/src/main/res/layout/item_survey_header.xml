<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_survey_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/font_size_s"
        android:gravity="center"
        tools:text="《产品经理吐槽大会》调查问卷"/>

    <TextView
        android:id="@+id/tv_survey_anonymous_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/assignment_exam_red"
        android:textSize="@dimen/font_xs"
        android:gravity="center"
        android:text="@string/survey_anonymous_tip"/>

    <TextView
        android:id="@+id/tv_survey_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/default_grey_text_color"
        android:textSize="@dimen/font_xs"
        tools:text="问卷说明：本次教学评价的开展，旨在更好的收集用户的真实反馈，从而有助于提高自身业务能力。"/>

</LinearLayout>