<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:paddingTop="@dimen/common_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/disabled2_hint_color"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPaddingBottom="15dp"
            app:contentPaddingRight="20dp"
            app:contentPaddingLeft="20dp"
            app:contentPaddingTop="15dp"
            android:paddingTop="@dimen/common_15"
            android:paddingBottom="@dimen/common_18"
            android:layout_marginLeft="@dimen/common_15"
            android:layout_marginRight="@dimen/common_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_class_type"
                    android:textSize="@dimen/font_xl"
                    android:textColor="@color/primary_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_price"
                    android:textColor="@color/secondary_color"
                    android:textSize="@dimen/font_l"
                    android:gravity="bottom"
                    android:layout_below="@id/tv_class_type"
                    android:layout_marginTop="@dimen/common_6"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_18" />

                <TextView
                    android:id="@+id/tv_price_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_maring0"
                    android:layout_below="@id/tv_class_type"
                    android:layout_toRightOf="@id/tv_price"
                    android:layout_marginTop="@dimen/common_6"
                    android:textColor="@color/secondary2_font_color"
                    android:textSize="@dimen/font_l" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:text="@string/discount"
                    android:visibility="gone"
                    android:layout_below="@id/tv_class_type"
                    android:layout_toRightOf="@id/tv_price_old"
                    android:layout_marginLeft="21dp"
                    android:textColor="@color/disabled2_hint_color"
                    android:textSize="@dimen/font_xxs"
                    android:layout_marginTop="@dimen/common_6"
                    android:background="@color/secondary_color"
                    android:gravity="center"
                    android:layout_width="@dimen/common_22"
                    android:layout_height="@dimen/common_16" />

                <TextView
                    android:id="@+id/tv_task"
                    android:textSize="@dimen/font_s"
                    android:textColor="@color/secondary_font_color"
                    android:layout_below="@id/tv_price"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_service"
                    android:textSize="@dimen/font_s"
                    android:text="@string/promise_services"
                    android:layout_below="@id/tv_task"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.edusoho.kuozhi.v3.view.FlowLayout
                    android:id="@+id/fl_service"
                    android:layout_below="@id/tv_task"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_toRightOf="@id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_vip"
                    android:textSize="@dimen/font_s"
                    android:textColor="@color/primary_color"
                    android:layout_below="@id/fl_service"
                    android:layout_marginTop="@dimen/common_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_hot"
        android:layout_marginTop="@dimen/common_15"
        android:layout_marginRight="@dimen/common_15"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/plan_hot"/>

</RelativeLayout>