<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_task_status"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/lesson_status" />

    <com.edusoho.kuozhi.clean.widget.ESIconView
        android:id="@+id/ev_task_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/iv_task_status"
        android:text="@string/catalog_lesson_audio"
        android:textColor="@color/disabled_hint_color"
        android:textSize="@dimen/font_l"
        android:visibility="gone" />

    <com.edusoho.kuozhi.clean.widget.ESIconView
        android:id="@+id/ev_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ev_task_lock"
        android:text="@string/course_task_lock"
        android:textColor="@color/secondary2_font_color"
        android:textSize="@dimen/font_xl" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_task_is_free"
        android:layout_toRightOf="@+id/ev_task_type"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="图文-中央在京津冀规划出雄安新区，比肩深圳和浦东中央在京津冀规划出雄安新区"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_s" />

    <TextView
        android:id="@+id/tv_task_is_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_task_duration"
        android:text="@string/course_task_free"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/font_xxs" />

    <TextView
        android:id="@+id/tv_live_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:text="直播中"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_s_" />

    <TextView
        android:id="@+id/tv_task_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="05:20"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_s" />
</RelativeLayout>