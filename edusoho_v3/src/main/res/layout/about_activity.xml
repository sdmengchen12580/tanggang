<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_about_school"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/my_item_bg"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_about_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/eiv_right_arrow1"
                android:text="@string/about_welcome"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />
        </RelativeLayout>

        <View
            android:id="@+id/v_separate_line_1"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_dddddd" />

        <RelativeLayout
            android:id="@+id/linear_check_update"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/my_item_bg"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.edusoho.kuozhi.v3.view.EduUpdateView
                android:id="@+id/tv_check_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/eiv_right_arrow3"
                android:text="@string/about_check_update"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>