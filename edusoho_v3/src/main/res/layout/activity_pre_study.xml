<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".clean.module.main.mine.prestudyhome.PreStudyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:src="@drawable/img_white_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/str_pres_study_home"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <ImageView
                android:id="@+id/img_pre_school"
                android:layout_width="91dp"
                android:layout_height="68dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16.5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_pre_school_default" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="22.5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17.5dp"
                android:layout_toLeftOf="@+id/img_pre_school"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="教室名称"
                android:textColor="@color/color_161616"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_home_address"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="教室位置" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_home_address"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="邮箱地址" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/layout_top"
            android:background="@color/color_f9f9f9" />

        <!--起始时间-->
        <RelativeLayout
            android:id="@+id/rl_select_start_time"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="17dp">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:text="预定起始时间"
                android:textColor="@color/color_bdbdbd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="请选择起始时间"
                android:textColor="@color/color_999999"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15.5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/img_graw_more" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/layout_top"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/color_eeeeee" />

        <!--结束时间-->
        <RelativeLayout
            android:id="@+id/rl_select_end_time"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="17dp">

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:text="预定起始时间"
                android:textColor="@color/color_bdbdbd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_time"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="请选择起始时间"
                android:textColor="@color/color_999999"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15.5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/img_graw_more" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/layout_top"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/color_eeeeee" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/layout_top"
            android:background="@color/color_dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_666666"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_0292fd"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>