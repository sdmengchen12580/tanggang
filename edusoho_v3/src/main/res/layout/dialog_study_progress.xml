<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="7.5dp"
    android:layout_width="315dp"
    android:layout_height="218dp">
    
    <TextView
        android:text="@string/study_progress"
        android:textSize="@dimen/font_l"
        android:textColor="@color/disabled2_hint_color"
        android:background="@drawable/dialog_study_progress"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <LinearLayout
        android:layout_marginTop="65dp"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:background="@drawable/dialog_study_progress_white"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="153dp">

        <TextView
            android:id="@+id/already_plan"
            android:paddingBottom="12dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/dialog_study_progress_point"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plan_complete"
            android:paddingBottom="12dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/dialog_study_progress_point"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/course_date"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/dialog_study_progress_point"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
        android:id="@+id/dialog_dismiss"
        android:text="@string/discuss_close"
        android:textColor="@color/disabled2_hint_color"
        android:textSize="@dimen/font_l"
        android:background="@drawable/shape_inclass_back"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>