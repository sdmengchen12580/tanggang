<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/tv_choice_letter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/font_size_s"
        android:gravity="center"
        android:layout_centerVertical="true"
        tools:text="A"
        android:background="@drawable/shape_survey_unselected"/>

    <TextView
        android:id="@+id/tv_choice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_choice_letter"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_s"
        android:textColor="@color/primary_font_color"
        tools:text="没感觉没感觉没感觉没感觉"/>



</RelativeLayout>