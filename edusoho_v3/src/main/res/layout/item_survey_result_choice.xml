<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/my_sch_bg_noraml_gradient"
        android:paddingBottom="10dp">
        
        <TextView
            android:id="@+id/tv_survey_result_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_s"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            tools:text="A 喜欢" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="3dp">

            <ProgressBar
                android:id="@+id/item_survey_result_progressbar"
                android:layout_width="210dp"
                android:layout_height="6dp"
                android:layout_alignParentLeft="true"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/item_progress_bar"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="50"
                android:indeterminate="false"/>

            <TextView
                android:id="@+id/tv_survey_result_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_xxs"
                android:textColor="@color/default_grey_text_color"
                android:layout_toLeftOf="@+id/tv_survey_result_percent"
                tools:text="1238人"/>

            <TextView
                android:id="@+id/tv_survey_result_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_xxs"
                android:textColor="@color/primary"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                tools:text="50.0%"/>

        </RelativeLayout>
        

        
    </LinearLayout>

</LinearLayout>