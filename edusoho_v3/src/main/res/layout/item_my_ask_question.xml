<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout_ask_question_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@+id/tv_content"
            android:layout_alignTop="@+id/tv_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_ask_type_red"
            android:gravity="center"
            android:text="话题"
            android:textColor="@color/secondary2_color"
            android:textSize="@dimen/font_xxs" />

        <TextView
            android:id="@+id/tv_is_elite"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:background="@color/primary_color"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_alignTop="@+id/tv_type"
            android:textSize="@dimen/font_xxs"
            android:textColor="@color/white"
            android:text="@string/is_elite"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="top|left"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_l" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_order"
            android:ellipsize="end"
            android:maxEms="7"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_xxs" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_order"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_order"
            android:textColor="@color/secondary2_font_color"
            android:textSize="@dimen/font_xxs" />

        <TextView
            android:id="@+id/tv_review_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_order"
            android:textColor="@color/secondary2_font_color"
            android:textSize="@dimen/font_s" />

        <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@+id/tv_review_num"
            android:text="@string/new_font_grade"
            android:textColor="@color/disabled_hint_color"
            android:textSize="16dp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/disabled_hint_color" />

</LinearLayout>