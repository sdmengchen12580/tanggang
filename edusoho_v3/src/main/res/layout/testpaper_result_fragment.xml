<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/system_normal_bg"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/testpaper_result_head"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textColor="@color/system_light_text"
        android:background="@drawable/card_bg"
        android:text="考试结果"
        android:gravity="center"
        android:textSize="@dimen/sys_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/testpaper_result_head"
        android:id="@+id/testpaper_result_head_column"
        android:textColor="@color/system_light_text"
        android:text="总分"
        android:gravity="center"
        android:textSize="@dimen/sys_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_alignTop="@id/testpaper_result_head_column"
        android:layout_centerHorizontal="true"
        android:textColor="@color/system_light_text"
        android:text="答对题"
        android:gravity="center"
        android:textSize="@dimen/sys_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/testpaper_result_head_column"
        android:textColor="@color/system_light_text"
        android:text="题型"
        android:gravity="center"
        android:textSize="@dimen/sys_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.edusoho.kuozhi.v3.view.EduSohoButton
        android:layout_alignParentBottom="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/testpaper_result_show"
        android:padding="10dp"
        app:borderWidth="0dp"
        app:defaultColor="@color/lesson_learn_btn_normal"
        app:focusColor="@color/lesson_learn_btn_pressed"
        app:iconPosition="right"
        app:textSize="@dimen/medium_font_size"
        app:radius="3dp"
        app:textStr="查看解析"
        app:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:layout_above="@id/testpaper_result_show"
        android:id="@+id/testpaper_result_review"
        android:textColor="@color/base_light_red"
        android:textSize="@dimen/font_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_above="@id/testpaper_result_review"
        android:padding="22dp"
        android:id="@+id/testpaper_result_total"
        android:textColor="@color/system_light_text"
        android:text="总分:"
        android:gravity="center"
        android:textSize="@dimen/sys_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:dividerHeight="1px"
        android:layout_above="@id/testpaper_result_total"
        android:id="@+id/testpaper_result_listview"
        android:layout_below="@id/testpaper_result_head_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
