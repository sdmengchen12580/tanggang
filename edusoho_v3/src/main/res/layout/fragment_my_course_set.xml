<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_study_ing"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/shape_study_selected"
            android:gravity="center"
            android:text="@string/study_ing"
            android:textColor="@color/white"
            android:textSize="@dimen/font_s" />

        <TextView
            android:id="@+id/tv_study_finished"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/shape_study_un_selected"
            android:gravity="center"
            android:text="@string/study_finished"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/font_s" />

    </LinearLayout>

    <com.edusoho.kuozhi.clean.widget.ESRecyclerView.ESPullAndLoadRecyclerView
        android:id="@+id/rv_course_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.edusoho.kuozhi.clean.widget.ESRecyclerView.ESPullAndLoadRecyclerView>

    <include
        layout="@layout/view_empty"
        android:visibility="gone" />

</LinearLayout>