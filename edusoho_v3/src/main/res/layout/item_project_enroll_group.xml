<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_sch_bg_noraml_gradient"
        android:padding="10dp">

        <com.edusoho.kuozhi.clean.widget.ESIconView
            android:id="@+id/tv_icon_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_grey_text_color"
            android:textSize="@dimen/font_s"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/new_font_type_course"/>

        <TextView
            android:id="@+id/tv_project_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:textColor="@color/secondary_font_color"
            android:layout_toRightOf="@+id/tv_icon_item_type"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/tv_project_item_teacher"
            android:textSize="@dimen/font_s"
            tools:text="野外拓展理论知识讲解野外拓展理论知识讲解"/>

        <TextView
            android:id="@+id/tv_project_item_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_group_expand_status"
            android:textColor="@color/default_grey_text_color"
            android:textSize="@dimen/font_xxs"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            tools:text="讲师：再用你的名"/>

        <ImageView
            android:id="@+id/iv_group_expand_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_prject_item_unexpand"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>