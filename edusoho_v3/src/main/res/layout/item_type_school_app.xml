<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/school_app_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/base_gray"
        android:visibility="gone">

        <TextView
            android:text="服务"
            android:textSize="12sp"
            android:textColor="@color/grey_alpha"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/material_grey"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/friend_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:background="@color/white"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/friend_avatar"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:riv_corner_radius="3dp"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/friend_name"
            android:textSize="@dimen/medium_font_size"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/friend_avatar"
            android:layout_alignTop="@id/friend_avatar"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <View
        android:id="@+id/divider_line"
        android:background="@color/material_grey"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>