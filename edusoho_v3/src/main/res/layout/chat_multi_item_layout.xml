<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/chat_multi_body"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_multi_title"
        android:textColor="@color/base_black_87"
        android:textSize="@dimen/base_size"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/chat_multi_icon"
            android:layout_margin="6dp"
            android:layout_width="@dimen/head_icon_large"
            android:layout_height="@dimen/head_icon_large"
            android:src="@drawable/defaultpic" />

        <TextView
            android:id="@+id/chat_multi_content"
            android:ellipsize="end"
            android:textColor="@color/base_black_54"
            android:textSize="@dimen/base_small_size"
            android:maxLines="3"
            android:layout_margin="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>