<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout_answer_question_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_content_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="回复："
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_s" />

        <TextView
            android:id="@+id/tv_content_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_content_txt1"
            android:layout_toRightOf="@+id/tv_content_txt1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_s" />

        <TextView
            android:id="@+id/tv_content_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_answer"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/disabled1_hint_color"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="问题："
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_s" />

        <TextView
            android:id="@+id/tv_content_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_content_txt2"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_content_txt2"
            android:background="@color/disabled1_hint_color"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_s" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_content_txt1"
            android:layout_below="@+id/tv_content_txt2"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_order"
            android:ellipsize="end"
            android:maxEms="7"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_xxs" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_order"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_order"
            android:textColor="@color/secondary2_font_color"
            android:textSize="@dimen/font_xxs" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/disabled_hint_color" />

</LinearLayout>