<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kuozhi.v3.view.test.FillQuestionWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="28dp"
    android:paddingBottom="28dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/system_normal_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/question_stem"
        android:id="@id/question_stem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/question_stem"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:id="@+id/question_fill_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <ViewStub
        android:layout="@layout/question_analysis"
        android:layout_marginTop="20dp"
        android:layout_below="@id/question_fill_layout"
        android:id="@+id/quetion_choice_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.edusoho.kuozhi.v3.view.test.FillQuestionWidget>
