<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_phone_or_mail"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_phone_or_mail_erase"
                android:hint="@string/input_phone_or_mail"
                android:paddingBottom="16dp"
                android:textColor="@color/primary_font_color"
                android:textColorHint="@color/secondary2_font_color"
                android:textSize="@dimen/font_l" />

            <ImageView
                android:id="@+id/iv_phone_or_mail_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/icon_erase"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/disabled_hint_color" />

        <RelativeLayout
            android:id="@+id/rl_img_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_img_code"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_img_code_erase"
                android:hint="@string/input_img_code"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/primary_font_color"
                android:textColorHint="@color/grey_hint"
                android:textSize="@dimen/font_l" />

            <ImageView
                android:id="@+id/iv_img_code_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/iv_img_code"
                android:paddingTop="2dp"
                android:src="@drawable/icon_erase"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_img_code"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_change_img_code"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_change_img_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/change_img_code"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/font_m" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/disabled_hint_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:alpha="0.6"
        android:background="@color/primary_color"
        android:gravity="center"
        android:text="@string/find_password_next"
        android:textColor="@color/base_white_normal"
        android:textSize="@dimen/font_xl" />

</LinearLayout>