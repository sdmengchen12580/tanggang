<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/green_feedback" />
            <corners android:radius="3dp" />

            <stroke android:width="1dp" android:color="@color/green_feedback" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/green_alpha" />
            <corners android:radius="3dp" />

            <stroke android:width="1dp" android:color="@color/green_alpha" />

        </shape>
    </item>

</selector>