<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke android:width="0dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="@color/base_black_12"
                android:centerY="0.45"
                android:endColor="@color/base_black_12"
                android:startColor="@color/base_black_12" />
        </shape>
    </item>

    <item
        android:top="0dp"
        android:bottom="1dp"
        android:left="0dp"
        android:right="0dp">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>