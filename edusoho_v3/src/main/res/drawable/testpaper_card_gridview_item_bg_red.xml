<?xml version="1.0" encoding="utf-8"?>
<shape
    android:shape="oval"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <size
        android:width="32dp"
        android:height="32dp" />
    <stroke
        android:width="1px"
        android:color="@color/assignment_exam_red" />
    <!-- shape的颜色，支持渐变 -->
    <gradient
        android:angle="270"
        android:centerColor="@color/assignment_exam_red"
        android:centerY="0.45"
        android:endColor="@color/assignment_exam_red"
        android:startColor="@color/assignment_exam_red" />

</shape>